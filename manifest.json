{
  "manifest_version": 3,
  "name": "LLM Response Copier",
  "version": "1.0",
  "description": "Copies LLM responses to the clipboard automatically.",
  "permissions": [
    "storage",
    "clipboardWrite"
  ],
  "action": {
    "default_popup": "settings.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "chatgpt.js"
      ],
      "matches": [
        "https://chatgpt.com/*"
      ]
    }
  ]
}
